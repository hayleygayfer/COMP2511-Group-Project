         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </HBox>
   <HBox fx:id="gameOver" alignment="CENTER" prefHeight="550.0" prefWidth="470.0" style="-fx-background-color: white;">
